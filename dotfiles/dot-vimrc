" ==============================================================================
"  Vim Configuration File
" ==============================================================================

" -- General Settings ----------------------------------------------------------
" Basic configurations for Vim behavior and appearance
if &compatible
    set nocompatible              " Disable Vi compatibility mode
endif

filetype indent plugin on         " Enable filetype detection, indentation, and plugins
syntax on                         " Enable syntax highlighting

" Mouse support: Enable mouse for navigation and selection
if has('mouse')
    if &term =~ 'xterm'
        set mouse=a               " Enable mouse in all modes for xterm
    else
        set mouse=nvi             " Enable mouse in normal, visual, and insert modes
    endif
endif

if has('syntax') && has('eval')
    packadd! matchit              " Load matchit plugin for extended % matching
endif

set noerrorbells                  " Disable error bells
set visualbell                    " Use visual bell instead of beeping
set t_vb=                         " Disable visual bell flash

set hidden                        " Allow switching buffers without saving
set linebreak                     " Ensure lines are broken at appropriate places
set nowrap                        " Disable line wrapping by default
set nrformats-=octal              " Treat numbers with leading zeros as decimal
set number                        " Show absolute line numbers
set relativenumber                " Show relative line numbers
set ruler                         " Show cursor position in the status line
set showcmd                       " Show command in the last line
set showbreak=+---                " Visually indicate line breakes
set wildmenu                      " Enhanced command-line completion

" Timeout settings for key sequences
set ttimeout
set ttimeoutlen=100               " Timeout for key codes (ms)
set timeoutlen=800                " Timeout for mapped key sequences (ms)

" -- Editing Settings ----------------------------------------------------------
" Configurations related to text editing and indentation

set autoindent                    " Copy indent from current line when starting a new line
set expandtab                     " Use spaces instead of tabs
set backspace=indent,eol,start    " Allow backspacing over indentation, line breaks, and start of insert
set smarttab                      " Insert tabs according to shiftwidth
set clipboard=unnamed             " Use system clipboard for yank, delete, change, and put operations
set pastetoggle=<F2>              " Toggle paste mode with F3 to prevent auto-indentation issues when pasting
set tabstop=2                     " Number of spaces that a <Tab> in the file counts for
set shiftwidth=2                  " Number of spaces to use for each step of (auto)indent

" -- Navigation Settings -------------------------------------------------------
" Settings to improve scrolling and cursor movement

set scrolloff=5                   " Keep 5 lines visible above and below the cursor
set sidescrolloff=5               " Keep 5 columns visible to the left and right of the cursor

" -- Searching Settings --------------------------------------------------------
" Configurations for search behavior

set ignorecase                    " Ignore case in search patterns
set incsearch                     " Show matches as you type
set nowrapscan                    " Do not wrap around when searching
set smartcase                     " Override ignorecase if search pattern contains uppercase letters
set hlsearch                      " Highlight all search matches

" -- Key Mappings --------------------------------------------------------------
" Custom key mappings for improved workflow
nnoremap <Space> <Nop>
let mapleader = "\<Space>"        " Set leader key to space

" File operations
nnoremap <silent> <leader>w <Cmd>w<CR>

" Streamline buffer ops
nnoremap <leader>bb <C-^>   " Switch between current and last buffer
nnoremap <leader>bn <Cmd>bn<CR> " Go to next buffer
nnoremap <leader>bp <Cmd>bp<CR> " Go to previous buffer
nnoremap <leader>bd <Cmd>bd<CR> " Close buffer

" Clear search highlights
nnoremap <silent> <C-l> <Cmd>nohlsearch<CR> " Clear search highlights with Ctrl-L

" -- Autocommands --------------------------------------------------------------
if has("autocmd")
    " Jump to the last cursor position when reopening a file
  augroup RestoreCursor
      autocmd!
      " Jump to the last cursor position when reopening a file
      " Don't do it for git commit messages (you want to start at the top there)
      autocmd BufReadPost *
            \ if line("'\"") > 1 && line("'\"") <= line("$") && &ft !~# 'commit' |
            \   exe "normal! g'\"" |
            \ endif
    augroup END

    " Open help files in a full window
    autocmd FileType help wincmd o

    " Auto-reload files when changed externally
    set autoread
    autocmd FocusGained,BufEnter * :checktime

    " Auto-save on focus lost
    autocmd FocusLost * :wa

    " Delete trainling whitespace
    autocmd BufWritePre * let save_view = winsaveview() | %s/\s\+$//e | call winrestview(save_view)
endif

" -- Backup and Swap -----------------------------------------------------------
if has('persistent_undo')
    set undofile
    set undodir=~/.vimtmp/undodir
    if !isdirectory(&undodir)
        call mkdir(&undodir, "p", 0700)  " Create undo directory portably
    endif
endif

set directory=~/.vimtmp/swap
if !isdirectory(&directory)
    call mkdir(&directory, "p", 0700)    " Create swap directory portably
endif

if has("vms")
    set nobackup
else
    set backup
    set backupext=.bak
    set backupdir=~/.vimtmp/backup
    if !isdirectory(&backupdir)
        call mkdir(&backupdir, "p", 0700)  " Create backup directory portably
    endif
endif

" -- Colours -------------------------------------------------------------------
" Set background and enable syntax highlighting
set background=dark
syntax on

" Enable true color support for GUI colors in terminal (optional but recommended)
if has('termguicolors')
  set termguicolors
endif

" Enable cursor line highlighting
set cursorline

" Core syntax highlighting groups (IntelliJ IDEA Islands Dark Theme)
" Palette Sources:
" Background: #191a1c | Foreground: #bcbec4
" Keywords:   #cf8e6d | Strings:    #6aab73
" Numbers:    #2aacb8 | Functions:  #56a8f5
" Comments:   #7a7e85

" Basic Colors
hi Normal guifg=#bcbec4 guibg=#191a1c

" Syntax Highlighting Groups
hi Boolean      guifg=#cf8e6d
hi Character    guifg=#6aab73
hi Comment      guifg=#7a7e85 gui=italic
hi Conditional  guifg=#cf8e6d
hi Constant     guifg=#2aacb8
hi Debug        guifg=#cf8e6d
hi Define       guifg=#cf8e6d
hi Delimiter    guifg=#bcbec4
hi Error        guifg=#e06c75 guibg=NONE
hi Exception    guifg=#cf8e6d
hi Float        guifg=#2aacb8
hi Function     guifg=#56a8f5
hi Identifier   guifg=#bcbec4
hi Ignore       guifg=#7a7e85
hi Include      guifg=#cf8e6d
hi Keyword      guifg=#cf8e6d
hi Label        guifg=#cf8e6d
hi Macro        guifg=#cf8e6d
hi Number       guifg=#2aacb8
hi Operator     guifg=#bcbec4
hi PreCondit    guifg=#cf8e6d
hi PreProc      guifg=#cf8e6d
hi Repeat       guifg=#cf8e6d
hi Special      guifg=#cf8e6d
hi SpecialChar  guifg=#cf8e6d
hi SpecialComment guifg=#7a7e85 gui=italic
hi Statement    guifg=#cf8e6d
hi StorageClass guifg=#cf8e6d
hi String       guifg=#6aab73
hi Structure    guifg=#cf8e6d
hi Tag          guifg=#56a8f5
hi Todo         guifg=#bcbec4 guibg=#2aacb8 gui=bold
hi Type         guifg=#2aacb8
hi Typedef      guifg=#2aacb8
hi Underlined   guifg=#56a8f5 gui=underline

" UI Elements
hi LineNr       guifg=#4b4e54 guibg=NONE ctermbg=NONE
hi SignColumn   guibg=NONE ctermbg=NONE
hi FoldColumn   guibg=NONE ctermbg=NONE

hi CursorLine   guibg=#2b2d30 gui=NONE cterm=NONE

hi CursorLineNr guifg=#bcbec4 guibg=#2b2d30 gui=NONE cterm=NONE

hi VertSplit    guifg=#2b2d30 guibg=NONE gui=NONE
hi EndOfBuffer  guifg=#191a1c guibg=NONE

hi IncSearch    guifg=#191a1c guibg=#2aacb8
hi Search       guifg=#191a1c guibg=#2aacb8
hi Visual       guibg=#2f333d
hi MatchParen   guifg=#cf8e6d guibg=#2b2d30 gui=bold

hi Pmenu        guifg=#bcbec4 guibg=#2b2d30
hi PmenuSel     guifg=#191a1c guibg=#56a8f5
hi ErrorMsg     guifg=#e06c75 guibg=NONE
hi WarningMsg   guifg=#cf8e6d guibg=NONE
hi ModeMsg      guifg=#6aab73
hi Title        guifg=#56a8f5 gui=bold
hi Directory    guifg=#56a8f5
hi NonText      guifg=#4b4e54 guibg=NONE

" -- Statusline ----------------------------------------------------------------
set laststatus=2

set statusline=
set statusline+=%7*\[%n]                                  " Buffer number
set statusline+=%1*\ %<%t\                                " File + path
set statusline+=%2*\ %y\                                  " FileType
set statusline+=%3*\ %{''.(&fenc!=''?&fenc:&enc).''}      " Encoding
set statusline+=%3*\ %{(&bomb?\",BOM\":\"\")}\            " Encoding2 (BOM)
set statusline+=%4*\ %{&ff}\                              " FileFormat (dos/unix..)
set statusline+=%8*\ %=\ row:%l/%L\ (%03p%%)\             " Rownumber/total (%)
set statusline+=%9*\ col:%03c\                            " Colnr
set statusline+=%0*\ \ %m%r%w\ %P\ \                      " Modified? Readonly? Top/bot (last segment)

" Statusline highlight groups (IntelliJ Islands Dark inspired)
" User1: File/Path (Blue)
highlight User1 guifg=#56a8f5 guibg=#2b2d30
highlight User2 guifg=#7a7e85 guibg=#2b2d30
highlight User3 guifg=#7a7e85 guibg=#2b2d30
highlight User4 guifg=#7a7e85 guibg=#2b2d30
highlight User7 guifg=#bcbec4 guibg=#2b2d30
highlight User8 guifg=#bcbec4 guibg=#2b2d30
highlight User9 guifg=#bcbec4 guibg=#2b2d30
highlight User0 guifg=#bcbec4 guibg=#2b2d30

" Ensure transparency/cleanup
hi clear Normal
hi clear StatusLine
hi clear StatusLineNC

